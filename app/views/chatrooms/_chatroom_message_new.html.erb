<div class="message-container <%= "is-author" if message.user == current_user %>" id="message-<%= message.id %>">
  <div class="d-flex">
    <div class="d-flex">
      <div class="mx-2">
          <i class="author">
            <span><%= message.user.first_name %></span>
            <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
          </i>
          <p><%= message.content %></p>
      </div>
      <div class="photo-writer">
        <% if message.user.photo.attached? %>
          <%= cl_image_tag message.user.photo.key, class: "avatar-semi-square" %>
        <% else %>
          <%= image_tag 'eric-zemmour.jpeg', class: "avatar-semi-square" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
